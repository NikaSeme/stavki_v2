# ===================================
# STAVKI Environment Configuration
# ===================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ---- API Keys ----
# The Odds API (https://the-odds-api.com) — required for live odds
ODDS_API_KEY=

# SportMonks API (https://sportmonks.com) — required for fixtures/schedule
SPORTMONKS_API_KEY=

# Betfair Exchange API (https://developer.betfair.com) — primary sharp odds (Back)
BETFAIR_APP_KEY=
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
# RSA Keypair for non-interactive login:
BETFAIR_CERT_FILE=client-2048.crt
BETFAIR_KEY_FILE=client-2048.key

# ---- Telegram Bot ----
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Comma-separated Telegram user IDs allowed to use the bot
TELEGRAM_ALLOWED_USERS=

# ---- Database ----
DATABASE_PATH=artifacts/stavki.db

# ---- Operational Mode ----
# Set to "false" for production (enables real staking suggestions)
DRY_RUN=true
LOG_LEVEL=INFO

# ---- Kelly Staking ----
# Fraction of Kelly to use (0.25 = quarter Kelly, conservative)
KELLY_FRACTION=0.25
# Max stake as percentage of bankroll per bet
MAX_STAKE_PCT=0.05
# Max daily loss before stopping (20% of bankroll)
MAX_DAILY_LOSS=0.20

# ---- Retraining ----
# Path to training data for weekly auto-retrain
RETRAIN_DATA_PATH=data/features_full.csv
